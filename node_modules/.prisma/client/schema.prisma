datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Country {
  id              Int                    @id @default(autoincrement())
  name            String
  code            String                 @unique
  visaFrom        VisaMatrix[]           @relation("FromCountry")
  visaTo          VisaMatrix[]           @relation("ToCountry")
  countryYearData CountryYearIndexData[]
}

model Year {
  id              Int          @id @default(autoincrement())
  year            Int          @unique
  worldPopulation Float?
  visaMatrix      VisaMatrix[]
}

model CountryYearIndexData {
  id           Int     @id @default(autoincrement())
  country      Country @relation(fields: [countryId], references: [id])
  countryId    Int
  year         Int
  population   Float?
  freedomIndex Float?
  welcomeIndex Float?
}

model VisaMatrix {
  id            Int     @id @default(autoincrement())
  fromCountry   Country @relation("FromCountry", fields: [fromCountryId], references: [id])
  fromCountryId Int
  toCountry     Country @relation("ToCountry", fields: [toCountryId], references: [id])
  toCountryId   Int
  year          Year    @relation(fields: [yearId], references: [id])
  yearId        Int
  visaFree      Boolean

  @@unique([fromCountryId, toCountryId, yearId])
}
